                        || ($child && $child->getMeta('id_gabarit') != $this->_gabarit->getId())
                        || $this->_gabarit->getIdParent() != $q->getMeta('id_gabarit')
                    ) {
                        $disabled = ' disabled="disabled"';
                    } else {
                        $nbChoixParents++;
                    }

                    $enfants = '';
                    $nbEnfants = $q->getMeta('nbre_enfants');
